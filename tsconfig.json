{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */
        "baseUrl": "./",
        "paths": {
            "@/*": ["api/*"],
            "@services/*": ["api/services/*"],
            "@utils/*": ["api/utils/*"]
        },
        "target": "es2016",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    }
}
